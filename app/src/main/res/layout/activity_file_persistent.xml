<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.beginningandroid.Data.FilePersistentActivity">

    <EditText
        android:id="@+id/etPersistent"
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="type something here"/>

    <Button
        android:id="@+id/btnGetSharedPreferences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GetSharedPreferences"/>

    <Button
        android:id="@+id/btnSetSharedPreferences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SetSharedPreferences"/>

</LinearLayout>
