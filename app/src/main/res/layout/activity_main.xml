<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Layout"
        android:id="@+id/btnTestLayout" />

    <Button
        android:id="@+id/btnTestHandler"
        android:text="Test Handler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnBroadcast"
        android:text="Broadcast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="broadCast"/>

    <Button
        android:id="@+id/btnFilePersistent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="File Persistent"/>

    <Button
        android:id="@+id/btnSQLite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SQLite"/>

    <Button
        android:id="@+id/btnServices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Services"/>

</LinearLayout>
